<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><%= @list.name %></h1>
      </div>
      <br>
      <h3 class="add-book-title">Add a book to your list</h3>
      <%= bootstrap_form_for [@list, @book], :html => { :class => 'form-inline' } do |f| %>
        
          <%= f.text_field :name, :class=> "input-small", :placeholder=>"name of book" %>
          
          <%= f.text_field :author, :class=> "input-small", :placeholder=>"author" %>
          
          <%= f.text_field :pages, :class=> "input-small", :placeholder=>"how many pages?" %>
          <%= f.submit :value=> "Add book", :class=> "btn btn-default btn-xs" %>
      <% end %>
      




		<% if @book.errors.any? %>
<div id="errors"
	<h2><%= pluralize(@book.errors.count, "error") %> prevented this book from being saved</h2>
	  <ul>
	    <% @book.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	    <% end %>
	    <% end %>
	 </ul>
</div>
</div>
</div>
<br>
<br>
<div class="row">
<div class="col-md-12">
 <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Pages</th>
        <th>Did you finish the book?</th>
        <th>Remove book from list</th>
      </tr>
    </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%=book.name %></td>
        <td><%=book.author %></td>
        <td><%=book.pages %></td>
        <td></td>
        <td><%= link_to "Remove book", [@list, book], method: :delete,
                                  data: { confirm: "You sure?" } %></td>
    <% end %>
      </tr>
  </tbody>
</table>
</div>
</div>
</div>
