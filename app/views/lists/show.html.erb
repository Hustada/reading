<div class="container">
<div class="page-header">
  <h1><%= @list.name %></h1>
</div>
<br>
<%= form_for [@list, @book], {:class => "form-inline"} do |f| %>
  <label for="name">Title</label>
    <%= f.text_field :name, :class=> "input-small", :placeholder=>"name of book" %>
    <label for="author">Author</label>
    <%= f.text_field :author, :class=> "input-small", :placeholder=>"author" %>
    <label for="pages">Pages</label>
    <%= f.text_field :pages, :class=> "input-small", :placeholder=>"how many pages?" %>
    <%= f.submit :value=> "Add book", :class=> "input-small" %>
<% end %>

		<% if @book.errors.any? %>
<div id="errors"
	<h2><%= pluralize(@book.errors.count, "error") %> prevented this book from being saved</h2>
	  <ul>
	    <% @book.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	    <% end %>
	    <% end %>
	 </ul>
</div>
<br>
<br>
 <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Pages</th>
        <th>Did you finish the book?</th>
        <th>Remove book from list</th>
      </tr>
    </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%=book.name %></td>
        <td><%=book.author %></td>
        <td><%=book.pages %></td>
        <td></td>
        <td><%= link_to "Remove book", [@list, book], method: :delete,
                                  data: { confirm: "You sure?" } %></td>
    <% end %>
      </tr>
  </tbody>
</table>
</div>
